<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
        xmlns:beans="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        ">

    <http>
        <intercept-url pattern="/**"/>

        <http-basic/>
    </http>

    <global-method-security pre-post-annotations="enabled"/>

    <!-- TODO:  Implementations will need to provide a customized spring security configuration that
     is configured for their environment -->
    <authentication-manager>
        <authentication-provider>
            <user-service>
                <user name="rest-read" password="rest-read" authorities="#{T(org.jasig.portlet.notice.controller.rest.Roles).REST_READ}"/>
                <user name="rest-user" password="rest-user" authorities="#{T(org.jasig.portlet.notice.controller.rest.Roles).REST_WRITE}"/>
            </user-service>
        </authentication-provider>
    </authentication-manager>
</beans:beans>